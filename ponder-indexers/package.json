{
  "name": "@api.8004.dev/ponder-indexers",
  "version": "0.1.0",
  "private": true,
  "description": "Ponder indexers for ERC-8004 registry events across multiple chains",
  "type": "module",
  "scripts": {
    "dev": "ponder dev",
    "start": "ponder start",
    "codegen": "ponder codegen",
    "build": "ponder build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --project tsconfig.check.json",
    "check": "vitest run && pnpm lint && pnpm typecheck"
  },
  "dependencies": {
    "@ponder/core": "^0.7.17",
    "@ponder/utils": "^0.2.16",
    "hono": "^4.10.7",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "viem": "^2.21.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vite": "^6.4.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

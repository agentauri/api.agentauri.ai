# ============================================================================
# PONDER INDEXERS ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your values
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# Database URL (same as Rust backend)
DATABASE_URL=postgresql://postgres:PASSWORD@localhost:5432/agentauri_backend

# ============================================================================
# RPC PROVIDERS - ETHEREUM SEPOLIA
# ============================================================================
# At least one provider required. Multiple providers enable failover & rotation.
ETHEREUM_SEPOLIA_RPC_ALCHEMY=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_SEPOLIA_RPC_INFURA=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_SEPOLIA_RPC_QUIKNODE=https://sepolia.quiknode.pro/YOUR_QUIKNODE_KEY
ETHEREUM_SEPOLIA_RPC_ANKR=https://rpc.ankr.com/eth_sepolia/YOUR_ANKR_KEY

# ============================================================================
# RPC PROVIDERS - BASE SEPOLIA
# ============================================================================
BASE_SEPOLIA_RPC_ALCHEMY=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_SEPOLIA_RPC_INFURA=https://base-sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_QUIKNODE=https://base-sepolia.quiknode.pro/YOUR_QUIKNODE_KEY
BASE_SEPOLIA_RPC_ANKR=https://rpc.ankr.com/base_sepolia/YOUR_ANKR_KEY

# ============================================================================
# RPC PROVIDERS - LINEA SEPOLIA
# ============================================================================
LINEA_SEPOLIA_RPC_ALCHEMY=https://linea-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
LINEA_SEPOLIA_RPC_INFURA=https://linea-sepolia.infura.io/v3/YOUR_INFURA_KEY
LINEA_SEPOLIA_RPC_ANKR=https://rpc.ankr.com/linea_sepolia/YOUR_ANKR_KEY

# ============================================================================
# RPC PROVIDERS - POLYGON AMOY
# ============================================================================
POLYGON_AMOY_RPC_ALCHEMY=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_AMOY_RPC_INFURA=https://polygon-amoy.infura.io/v3/YOUR_INFURA_KEY
POLYGON_AMOY_RPC_QUIKNODE=https://polygon-amoy.quiknode.pro/YOUR_QUIKNODE_KEY
POLYGON_AMOY_RPC_ANKR=https://rpc.ankr.com/polygon_amoy/YOUR_ANKR_KEY

# ============================================================================
# RATE LIMITS (requests per second per provider)
# ============================================================================
RPC_RATE_LIMIT_ALCHEMY=25
RPC_RATE_LIMIT_INFURA=20
RPC_RATE_LIMIT_QUIKNODE=25
RPC_RATE_LIMIT_ANKR=30

# ============================================================================
# RANKING CONFIGURATION (health checks for smart failover)
# ============================================================================
RPC_RANK_INTERVAL=10000      # 10s between health pings
RPC_RANK_SAMPLE_COUNT=10     # Number of samples for averaging
RPC_RANK_TIMEOUT=2000        # 2s timeout for health pings

# ============================================================================
# PONDER CONFIGURATION
# ============================================================================
PONDER_LOG_LEVEL=info
PONDER_RPC_REQUEST_TIMEOUT=30000

